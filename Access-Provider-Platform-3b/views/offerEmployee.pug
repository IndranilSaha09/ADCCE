doctype html
head
 link(rel="icon", href="/images/favicon.ico")
 style.
  body { 
    margin: 0;  
    padding: 0;  
    background-color:#fff066;
    font-family: 'Arial';  
  } 
  h1,h2,{
    text-align:center;

    }
  table, th, td {
  border:1px solid blue;
  }

body
  block content
  script(src='http://code.jquery.com/jquery-3.3.1.min.js')
  script(src='/javascripts/app.js')

h1 Access Management Platform 
h2 Available Employees For Offer
table(style='width:100%',border='1')
    tr
     th Employee ID 
     th Employee name
     th Provider name
     th Date
     th Notes
     th  
    each employee in employees
     tr
     td #{employee._id}
     td #{employee.employee_name}
     td #{employee.provider_name}
     td #{employee.dateuntil}
     td #{employee.notes}
     td
      a(href=`/users/submitoffer?employee_name=${employee.employee_name}&provider_name=${employee.provider_name}&contactperson=${employee.contactperson}&externalperson=${employee.externalperson}&rate=${employee.rate}&dateuntil=${employee.dateuntil}&notes=${employee.notes}&document=${employee.document}&status=${employee.status}`) select  